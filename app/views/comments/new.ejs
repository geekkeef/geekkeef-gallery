<% include ../partials/header %>

    <div class="row main-gallery__add">
        <div class="col--12">
            <div class="gallery__title--bar">
                <h3 class="gallery__title gallery__title--comment">
                    <i class="fa fa-picture-o" aria-hidden="true"></i>
                    Add Comment: <%= photo.name %>
                </h3>
            </div>
        </div>
    </div>


    <form class="form--contact" action="/gallery/<%= photo._id %>/comments" method="POST">
        <div class="form--group">
            <input type="text" class="form--control" id="text" name="comment[text]" placeholder="Text">
        </div>
        <div class="form--group">
            <input type="text" class="form--control" id="author" name="comment[author]" placeholder="Author">
        </div>
        <button type="submit" class="btn btn--lg btn--blue">Add Comment</button>
    </form>

    <div class="main-gallery__button main-gallery__button--sm">
        <a href="/gallery" class="btn btn--orange">Back</a>
    </div>

<% include ../partials/footer %>
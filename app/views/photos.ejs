<% include partials/header %>

<h1 class="gallery__title" style="margin-bottom: 20px;">Photos</h1>
<a href="/photos/new" class="btn btn--sm btn--blue" style="margin-bottom: 20px;">Add New Photo</a>

    <div class="row">
        <% galleryPhotos.forEach(function(photo){ %>
            <div class="col--4 col--6--sm" style="text-align: center;">
                <h3><%= photo.name %></h3>
                <img style="width:100%;" src="<%= photo.image %>">
                <p ><%= photo.description %></p>
            </div>
        <% }); %>
    </div>

<% include partials/footer %>
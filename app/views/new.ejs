<% include partials/header %>

<h1>Add a photo to gallery</h1>

<form class="form--contact" action="/photos" method="POST">
    <div class="form--group">
        <input type="text" class="form--control" id="name" name="name" placeholder="Name">
    </div>
    <div class="form--group">
        <input type="text" class="form--control" id="image" name="image" placeholder="Image URL">
    </div>
    <div class="form--group">
        <input type="text" class="form--control" id="description" name="description" placeholder="Description">
    </div>
    <button type="submit" class="btn btn--lg btn--blue">Add Photo</button>
</form>

<a href="/photos" class="btn btn--orange">Back</a>

<% include partials/footer %>